<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox fx:id="viewContainer" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.db_zlagoda.cashier_page.Controllers.ProductFiltersViewController"
      prefHeight="175.0" prefWidth="250.0">
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Фільтри пошуку" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="15.0" />
            </VBox.margin>
        </Label>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Label text="Категорія">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="categoryChoiceBox" maxWidth="1.7976931348623157E308" />
            </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Label text="Акція">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="saleChoiceBox" maxWidth="1.7976931348623157E308" />
            </children>
        </VBox>
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
            <children>
                <Button onAction="#updateFilters" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Зберегти" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#deleteFilters" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Очистити" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
</VBox>
