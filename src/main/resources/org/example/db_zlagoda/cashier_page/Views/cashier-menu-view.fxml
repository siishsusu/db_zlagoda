<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="cashierMenuContainer" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.db_zlagoda.cashier_page.Controllers.CashierMenuViewController">
    <VBox maxWidth="200.0" minWidth="200" spacing="20.0">
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Профіль"/>
        <VBox spacing="5">
            <Button fx:id="productsButton" onAction="#openProducts" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Товари"/>
            <Button fx:id="clientsButton" onAction="#openClients" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Клієнти"/>
        </VBox>
        <VBox spacing="5">
            <Button fx:id="receiptButton" onAction="#openReceipt" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Створити чек"/>
            <Button alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Історія чеків"/>
        </VBox>
    </VBox>

    <VBox prefWidth="1000" spacing="10" fx:id="receiptMenu">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Створення чеку"/>
        <VBox prefWidth="900">
            <children>
                <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="900.0"
                      spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <Button mnemonicParsing="false" text="Очистити"/>
                        <Button mnemonicParsing="false" text="Додати товар"/>
                        <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Чек #005832"
                               HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <TableView nodeOrientation="LEFT_TO_RIGHT" prefHeight="1000">
                    <columns>
                        <TableColumn text="UTC"/>
                        <TableColumn text="Назва"/>
                        <TableColumn text="Кількість"/>
                        <TableColumn/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="900.0"
                      spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <Button mnemonicParsing="false" text="Видалити"/>
                        <Button mnemonicParsing="false" text="Зберегти"/>
                        <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Сума 1873 грн"
                               HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </VBox>
    <VBox prefWidth="1000" spacing="10" fx:id="searchProductsMenu">
        <children>
            <Label text="Пошук товарів" />
            <VBox prefWidth="900">
                <children>
                    <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="900.0" spacing="5.0">
                        <children>
                            <Button mnemonicParsing="false" text="Фільтри" />
                            <Button mnemonicParsing="false" text="Додати товар" />
                            <TextArea nodeOrientation="LEFT_TO_RIGHT" maxWidth="1.7976931348623157E308" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        </children>
                        <padding>
                            <Insets bottom="5.0" top="5.0" />
                        </padding>
                    </HBox>
                    <TableView fx:id="productsTable" nodeOrientation="LEFT_TO_RIGHT" prefHeight="1000">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="product_utc" text="UTC" />
                            <TableColumn fx:id="product_name" text="Назва" />
                            <TableColumn fx:id="product_amount" text="Кількість" />
                            <TableColumn fx:id="product_availability" text="Наявність" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
    <VBox prefWidth="1000" spacing="10" fx:id="searchClientsMenu">
        <children>
            <Label text="Пошук постійних клієнтів" />
            <VBox prefWidth="900">
                <children>
                    <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="900.0" spacing="5.0">
                        <children>
                            <Button mnemonicParsing="false" text="Фільтри" />
                            <Button mnemonicParsing="false" text="Додати товар" />
                            <TextArea nodeOrientation="LEFT_TO_RIGHT" maxWidth="1.7976931348623157E308" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        </children>
                        <padding>
                            <Insets bottom="5.0" top="5.0" />
                        </padding>
                    </HBox>
                    <TableView fx:id="clientsTable" nodeOrientation="LEFT_TO_RIGHT" prefHeight="1000">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="client_id" text="Номер карти" />
                            <TableColumn fx:id="client_name" text="ПІБ" />
                            <TableColumn fx:id="client_phone" text="Телефон" />
                            <TableColumn fx:id="client_address" text="Адреса" />
                            <TableColumn fx:id="client_discount" text="Знижка" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</HBox>
